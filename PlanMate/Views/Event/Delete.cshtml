﻿@using System.Linq

@model PlanMate.Entities.Event
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Etkinlik Sil</h1>
            </div>

        </div>
    </div>
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle"></i> Etkinlik Silme Onayı
                        </h3>
                    </div>

                    <div class="card-body">
                        <div class="alert alert-danger">
                            <h5><i class="fas fa-exclamation-triangle"></i> Dikkat!</h5>
                            <p>Bu etkinliği silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><strong>Etkinlik Başlığı:</strong></label>
                                    <p class="form-control-static">@Model.Title</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><strong>Kategori:</strong></label>
                                    <p class="form-control-static">
                                        <span class="badge" style="background-color: @(Model.Category?.Color ?? "#3c8dbc"); color: white;">
                                            @(Model.Category?.Name ?? "Kategorisiz")
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><strong>Başlangıç Tarihi:</strong></label>
                                    <p class="form-control-static">
                                        <i class="far fa-calendar-alt"></i>
                                        @(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("dd.MM.yyyy HH:mm") : "Tarih belirlenmedi")
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><strong>Bitiş Tarihi:</strong></label>
                                    <p class="form-control-static">
                                        <i class="far fa-calendar-check"></i>
                                        @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("dd.MM.yyyy HH:mm") : "Tarih belirlenmedi")
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label><strong>Açıklama:</strong></label>
                                    <p class="form-control-static">
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            @Model.Description
                                        }
                                        else
                                        {
                                            <em>Açıklama bulunmuyor</em>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label><strong>Etkinlik ID:</strong></label>
                                    <p class="form-control-static">#@Model.Id</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.Id)

                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Evet, Sil
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> İptal
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .form-control-static {
            padding: 0.375rem 0.75rem;
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            margin-bottom: 0;
        }

        .card-footer {
            background-color: rgba(0,0,0,.03);
            border-top: 1px solid rgba(0,0,0,.125);
        }

        .btn {
            margin-right: 10px;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

        .badge {
            font-size: 0.75rem;
        }
    </style>
}

